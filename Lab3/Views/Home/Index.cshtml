@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #2C2C2C;
            
        }

        header {
            background-color: #2C2C2C;
            color: red;
            padding: 10px;
            text-align: center;
        }

        section {
            max-width: 800px;
            background-color: #fff;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
        }

        p {
            color: #555;
        }

        .cta-button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #e74c3c;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .cta-button:hover {
            background-color: #202020;
        }
    </style>
</head>
<body>

    <header>
        <h1>Travel App</h1>
    </header>

    <section>
        <h1>Witaj w Travel App!</h1>
        <p>Planuj swoje podróże z nami. Odkrywaj nowe miejsca, rezerwuj noclegi i śledź swoje przygody.</p>
        <a href="#" class="cta-button">Zacznij Planować</a>
    </section>

</body>
</html>